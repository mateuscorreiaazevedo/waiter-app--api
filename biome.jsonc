{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "style": {
        "useConst": {
          "level": "error",
          "fix": "safe",
          "options": {}
        },
        "useFilenamingConvention": "off"
      }
    }
  }
}
